<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="clr-namespace:SigmaLib.ViewModels"
			 xmlns:conv="clr-namespace:SigmaLib.Converters"
			 mc:Ignorable="d"
			 x:Class="SigmaLib.Views.BookSearchView"
			 x:Name="BookSearchRoot"
			 x:DataType="vm:BookSearchViewModel">

	<UserControl.Resources>
		<conv:InverseBooleanConverter x:Key="InverseBoolConverter"/>
	</UserControl.Resources>

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Панель поиска -->
<Border Grid.Row="0"
        BorderBrush="LightGray"
        BorderThickness="0,0,0,1"
        Padding="12"
        Margin="0,0,0,12"
        Background="#F8F9FA">
    <StackPanel>
        <TextBlock Text="Поиск книг"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"
                   Foreground="#2C3E50"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Название:" 
                           Margin="0,0,0,4"
                           Foreground="#555555"/>
                <TextBox Text="{Binding SelectedTitle}"
                         Padding="6"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"
                         Height="30"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                <TextBlock Text="Автор:" 
                           Margin="0,0,0,4"
                           Foreground="#555555"/>
                <TextBox Text="{Binding SelectedAuthor}"
                         Padding="6"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"
                         Height="30"/>
            </StackPanel>

            <Button Grid.Column="2"
                    Content="Найти"
                    VerticalContentAlignment="Center"
                    HorizontalAlignment="Center"
                    Height="30"
                    MinWidth="90"
                    VerticalAlignment="Bottom"
                    Padding="10,0"
                    Background="#3498DB"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="SemiBold"
                    Command="{Binding SearchCommand}"/>
        </Grid>
    </StackPanel>
</Border>

<!-- Дополнительные фильтры -->
<Border Grid.Row="1"
        BorderBrush="LightGray"
        BorderThickness="0,0,0,1"
        Padding="12"
        Margin="0,0,0,12"
        Background="#F8F9FA">
    <StackPanel>
        <TextBlock Text="Дополнительные фильтры"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Margin="0,0,0,12"
                   Foreground="#2C3E50"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Жанр:" 
                           Margin="0,0,0,4"
                           Foreground="#555555"/>
                <TextBox Text="{Binding SelectedGenre}"
                         Padding="6"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"
                         Height="30"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                <TextBlock Text="Год издания:" 
                           Margin="0,0,0,4"
                           Foreground="#555555"/>
                <TextBox Text="{Binding SelectedYear}"
                         Padding="6"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         VerticalContentAlignment="Center"
                         Height="30"/>
            </StackPanel>
        </Grid>
    </StackPanel>
</Border>

		<!-- Список книг -->
		<ScrollViewer Grid.Row="2">
			<ItemsControl ItemsSource="{Binding Books}" x:Name="ListBooks"
              Margin="0,20,0,0">
    <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
            <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
        </ItemsPanelTemplate>
    </ItemsControl.ItemsPanel>

    <ItemsControl.ItemTemplate>
        <DataTemplate>
            <!-- Карточка книги -->
            <Border Width="300"
                    Margin="12,8"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    Background="White"
                    Padding="16"
                    CornerRadius="4">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Название -->
                    <TextBlock Grid.Row="0"
                               Text="{Binding Title}"
                               FontWeight="SemiBold"
                               FontSize="16"
                               TextWrapping="Wrap"
                               MaxHeight="48"
                               TextTrimming="CharacterEllipsis"
                               Margin="0,0,0,8"
                               Foreground="#2C3E50"/>

                    <!-- Автор -->
                    <TextBlock Grid.Row="1"
                               Text="{Binding Author}"
                               FontSize="14"
                               Margin="0,0,0,6"
                               Foreground="#555555"/>

                    <!-- Жанр -->
                    <TextBlock Grid.Row="2"
                               Text="{Binding Genre}"
                               FontSize="13"
                               Margin="0,0,0,6"
                               Foreground="#666666"/>

                    <!-- Год -->
                    <TextBlock Grid.Row="3"
                               Text="{Binding Year, StringFormat='Год издания: {0}'}"
                               FontSize="13"
                               Margin="0,0,0,4"
                               Foreground="#666666"/>

                    <!-- Цена -->
                    <TextBlock Grid.Row="4"
                               Text="{Binding Price, StringFormat='Штраф за просрочку: {0} руб./день'}"
                               FontSize="13"
                               Margin="0,0,0,8"
                               Foreground="#666666"/>

                    <!-- Информация о количестве -->
                    <StackPanel Grid.Row="5"
                                Orientation="Horizontal"
                                Margin="0,4,0,0">
                        <Border Background="#F0F8FF"
                                Padding="6,4"
                                CornerRadius="3"
                                Margin="0,0,8,0">
                            <TextBlock Text="{Binding TotalCopies, StringFormat='Всего: {0}'}"
                                       FontSize="13"
                                       Foreground="#2C75B3"
                                       FontWeight="Medium"/>
                        </Border>
                        <Border Background="#F0FFF0"
                                Padding="6,4"
                                CornerRadius="3">
                            <TextBlock Text="{Binding AvailableCopies, StringFormat='Доступно: {0}'}"
                                       FontSize="13"
                                       Foreground="#228B22"
                                       FontWeight="Medium"/>
                        </Border>
                    </StackPanel>

                    <!-- Разделитель -->
                    <Border Grid.Row="6"
                            BorderThickness="0,1,0,0"
                            BorderBrush="#F0F0F0"
                            Margin="0,12,0,12"/>

                    <!-- Бронирование -->
                    <StackPanel Grid.Row="7"
                                Orientation="Vertical"
                                VerticalAlignment="Bottom"
                                IsVisible="{Binding IsReservable}">

                        <!-- Даты -->
                        <StackPanel Margin="0,0,0,12" Orientation="Vertical" Spacing="10">

                            <!-- Дата получения -->
                            <StackPanel Orientation="Vertical" Spacing="4">
                                <TextBlock Text="{Binding PickupDateWarning}"
                                           TextWrapping="Wrap"
                                           Foreground="#D32F2F"
                                           FontSize="11"
                                           Margin="0,0,0,2"/>
                                <DockPanel LastChildFill="True">
                                    <TextBlock Text="Получение:"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"
                                               FontSize="13"
                                               Foreground="#555555"/>
                                    <TextBox Text="{Binding PickupDateText}"
                                             Height="32"
                                             Padding="8,0"
                                             VerticalContentAlignment="Center"
                                             BorderBrush="#CCCCCC"
                                             BorderThickness="1"
                                             FontSize="13"
                                             Watermark="дд-мм-гггг"/>
                                </DockPanel>
                            </StackPanel>

                            <!-- Дата возврата -->
                            <StackPanel Orientation="Vertical" Spacing="4">
                                <TextBlock Text="{Binding ReturnDateWarning}"
                                           TextWrapping="Wrap"
                                           Foreground="#D32F2F"
                                           FontSize="11"
                                           Margin="0,0,0,2"/>
                                <DockPanel LastChildFill="True">
                                    <TextBlock Text="Возврат:"
                                               VerticalAlignment="Center"
                                               Margin="0,0,8,0"
                                               FontSize="13"
                                               Foreground="#555555"/>
                                    <TextBox Text="{Binding ReturnDateText}"
                                             Height="32"
                                             Padding="8,0"
                                             VerticalContentAlignment="Center"
                                             BorderBrush="#CCCCCC"
                                             BorderThickness="1"
                                             FontSize="13"
                                             Watermark="дд-мм-гггг"/>
                                </DockPanel>
                            </StackPanel>

                        </StackPanel>

                        <!-- Кнопка бронирования -->
                        <Button Content="Забронировать"
                                Command="{Binding $parent[ItemsControl].DataContext.AddReservationCommand}"
                                CommandParameter="{Binding}"
                                Height="36"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Bottom"
                                HorizontalContentAlignment="Center"
                                VerticalContentAlignment="Center"
                                Padding="16,0"
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                FontWeight="SemiBold"
                                FontSize="14"
                                Margin="0,0,0,8"
                                CornerRadius="4">
                        </Button>
                        
                        <TextBlock Text="{Binding ResultReservation}" 
                                   TextWrapping="Wrap"
                                   FontSize="12"
                                   Margin="0,4,0,0"
                                   Foreground="#2E7D32"
                                   FontWeight="Medium"/>
                    </StackPanel>
                    
                    <!-- Сообщение о недоступности -->
                    <Border Grid.Row="7" 
                            VerticalAlignment="Center"
                            Background="#FFEBEE"
                            BorderBrush="#FFCDD2"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12,8"
                            IsVisible="{Binding IsReservable, Converter={StaticResource InverseBoolConverter}}">
                        <TextBlock Text="Книга временно недоступна для бронирования"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="#C62828"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   TextAlignment="Center"
                                   FontWeight="Medium"/>
                    </Border>
                </Grid>
            </Border>
        </DataTemplate>
    </ItemsControl.ItemTemplate>
</ItemsControl>
		</ScrollViewer>

		<!-- Сообщение об ошибке или пустом результате -->
		<Border Grid.Row="2"
				Background="LightYellow"
				BorderBrush="Yellow"
				BorderThickness="1"
				Padding="10"
				CornerRadius="5"
				IsVisible="{Binding HasError}"
				VerticalAlignment="Top"
				HorizontalAlignment="Center"
				Margin="0,20,0,0">
			<StackPanel>
				<TextBlock Text="Ошибка поиска"
						   FontWeight="Bold"
						   Foreground="DarkRed"/>
				<TextBlock Text="{Binding ErrorMessage}"
						   TextWrapping="Wrap"
						   MaxWidth="400"/>
			</StackPanel>
		</Border>
		<!-- Сообщение при отсутствии книг -->
		<Border Grid.Row="2"
				IsVisible="{Binding HasNoBooks}">
			<StackPanel HorizontalAlignment="Center"
						VerticalAlignment="Center">
				<TextBlock Text="&#x1F4DA;"

						   FontSize="48"/>
				<TextBlock Text="Книги не найдены"
						   FontSize="16"
						   FontWeight="Bold"
						   Margin="0,10,0,0"/>
				<TextBlock Text="Попробуйте изменить параметры поиска"
						   FontSize="12"
						   Margin="0,5,0,0"/>
			</StackPanel>
		</Border>
	</Grid>
    </UserControl>